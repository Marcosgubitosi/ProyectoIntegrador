<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="./images/banner_autos.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%  for( let i = (lista.productos.length - 4); i < lista.productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="../product">
							<figure class="product-box_image">
								<img src="<%= lista.productos[i].imagen %>" >
							</figure>
							<article class="product-box_data">
								<h2><%= lista.productos[i].nombre_producto %></h2>
								<p><%= lista.productos[i].descripcion %></p>
								<p>Comentarios: <%= lista.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% }  
				%>
		</div>
	</div>

			

	<!-- Más vistos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más vistos</h2>
			</div>
			<%  for( let i = 0; i < 4; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="../product">
							<figure class="product-box_image">
								<img src="<%= lista.productos[i].imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= lista.productos[i].nombre_producto %></h2>
								<p><%= lista.productos[i].descripcion %></p>
								<p>Comentarios: <%= lista.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% }  
				%>
			</div>
		</div>
	<!-- /Más vistos -->

	<%- include('./partials/footer') %>


</body>	

</html>