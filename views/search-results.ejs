<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %> 	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<% if (datos.length > 0) { %>
					<h2 class="products-title">Resultados de b√∫squeda para: <%= query %></h2>
				<% }else{ %>
					<h2 class="products-title-not">No se encontraron resultados para: <%= query %></h2>
				<%} %>
				
			</div>
			<% for (let i = 0; i < datos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= datos[i].producto_id%>">
					<figure class="product-box_image">
						<img src="<%= datos[i].nombre_archivo_producto %>">
					</figure>
				</a>
					<a class="pemail" href="/profile/id/<%= datos[i].usuario_id%>"> <%= datos[i].usuario.email%></a>
					<a href="/product/id/<%= datos[i].producto_id%>"> 
					<article class="product-box_data">
						<h2><%= datos[i].nombre_producto %></h2>
						<p><%= datos[i].descripcion_producto %></p>
						<p>Comentarios: <%= datos[i].comentario.length %> </p>
					</article>
				</a>
				
					
				</section>
			</div>
			<% } %>

		<%- include('./partials/footer') %>
</body>

</html>