<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %> 	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= datos.producto_id%>">
					
						<figure class="product-box_image">
							<img src="<%= datos.nombre_archivo_producto %>" alt="cafetera moulinex">
						</figure>
						<a href="/profile/id/<%= datos.usuario_id%>"> <%= datos.usuario.email%></a>
						<article class="product-box_data">
							<h2><%= datos.nombre_producto %></h2>
							<p><%= datos.descripcion_producto %></p>
							<p>Comentarios: </p>
							<%  for( let i = 0; i < datos.comentario.length; i++ ) { %>
								<article>
									<div class="data">
										<p class="user">
										<strong> <a href="/profile/id/<%= datos.comentario[i].usuario.id %>"><%= datos.comentario[i].usuario.email %>:</a> </strong>
										<%= datos.comentario[i].comentario %></p>
									</div>
								</article>
								<% } %> 
						</article>
					</a>
				</section>
			</div>
				


		<%- include('./partials/footer') %>
</body>

</html>