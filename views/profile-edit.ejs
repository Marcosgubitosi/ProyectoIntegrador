<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %> 	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="login-title">Editar mi perfil</h2>
			</div>
			<!--Evitamos que se rompa al mandarlo a una ruta-->
			<h2 class="col-12"> 
				<div class="rform-container">
				<form class="lform" action="/profile/profileEdit/<%=info.id %>" method="POST">
					<label for="email">Email:</label>
					<input class="linput" type="email" id="email" name="email" value="<%= info.email %>" ><br>
					<% if (locals.errors && errors.email) { %><p class='error'><%= errors.email.msg %></p><% } %>
				
					<label for="nombre_usuario">Usuario:</label>
					<input class="linput" type="text" id="nombre_usuario" name="nombre_usuario" value="<%= info.nombre_usuario %>"><br>
					<% if (locals.errors && errors.nombre_usuario) { %><p class='error'><%= errors.nombre_usuario.msg %></p><% } %>
				
					<label for="contrasenia">Contrase√±a:</label>
					<input class="linput" type="password" id="contrasenia" name="contrasenia" ><br>
					<% if (locals.errors && errors.contrasenia) { %><p class='error'><%= errors.contrasenia.msg %></p><% } %>
				
					<label for="fecha_nacimiento">Fecha de nacimiento:</label>
					<input class="linput" type="date" id="fecha_nacimiento" name="fecha_nacimiento" value="<%= info.fecha_nacimiento %>"><br>
				
					<label for="dni">Nro de documento:</label>
					<input class="linput" type="number" id="dni" name="dni" value="<%= info.dni %>"><br>
				
					<label for="foto_perfil">Foto de perfil:</label>
					<input class="linput" type="text" id="foto_perfil" name="foto_perfil" value="<%= info.foto_perfil %>"><br>
				
					<button class="boton" type="submit">Guardar Cambios</button>
				</form>
			</div>


			<%- include('./partials/footer') %>
</body>

</html>