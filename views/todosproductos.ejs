<%- include('./partials/head') %>
<body>
    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %> 
        <div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
    <%  for( let i = 0; i < productos.length; i++ ) { %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="../product/id/<%= productos[i].producto_id %>"> 
                    <figure class="product-box_image">
                        <img src="<%= productos[i].nombre_archivo_producto %>" >
                    </figure>
                </a>
                    <a class="pemail" href="/profile/id/<%= productos[i].usuario_id%>"> <%= productos[i].usuario.email%></a>
                    <a href="../product/id/<%= productos[i].producto_id %>">
                    <article class="product-box_data">
                        <h2><%= productos[i].nombre_producto %></h2>
                        <p><%= productos[i].descripcion_producto %></p>
                        <p>Comentarios: <%= productos[i].comentario.length %></p>

                    </article>
                </a>
            </section>
        </div>
        <% }  
        %>
    </div>
</div>

	<%- include('./partials/footer') %>
</body>	

</html>