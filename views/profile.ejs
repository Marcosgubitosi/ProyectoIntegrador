<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %> 
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= datos.foto_perfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= datos.nombre_usuario %>
						<a href="/profile/profileEdit/<%= datos.id %>">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= datos.email %></li>
						<br>
						<li> <%= datos.producto.length %> productos</li>
						<li>200 seguidores</li>
						<li> <%= datos.comentario.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<%  for( let i = (datos.producto.length - 1); i > -1; i-- ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= datos.producto[i].producto_id %>">
							<figure class="product-box_image">
								<img src="<%= datos.producto[i].nombre_archivo_producto %>" >
							</figure>
							<article class="product-box_data">
								<h2><%= datos.producto[i].nombre_producto %></h2>
								<p><%= datos.producto[i].descripcion_producto %></p>
								<p>Comentarios: <%= datos.producto[i].comentario.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% }  
				%>
		</div>
	</div>

	<!-- /Mis productos -->


	<%- include('./partials/footer') %>
</body>	
</html>